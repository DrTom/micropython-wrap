#!/usr/bin/env bash
set -euo pipefail
PROJECT_DIR="$(cd -- "$(dirname "${BASH_SOURCE}")" ; cd .. > /dev/null 2>&1 && pwd -P)"

cd $PROJECT_DIR

docker build -t micropython:latest .

docker run \
  -v .:/micropython-wrap  \
  -it micropython:latest micropython-wrap/scripts/build-lego-hub-no6-firmware

# vi: ft=sh
