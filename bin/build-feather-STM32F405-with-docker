#!/usr/bin/env bash
set -euo pipefail
PROJECT_DIR="$(cd -- "$(dirname "${BASH_SOURCE}")" ; cd .. > /dev/null 2>&1 && pwd -P)"

# git submodupe update --init --recursive --force

cd $PROJECT_DIR

docker build -t circuitpython-wrap:latest .

docker run \
  -v .:/circuitpython-wrap \
  -it circuitpython-wrap:latest /circuitpython-wrap/scripts/build-feather-STM32F405

#/scripts/build-pybricks-firmware

